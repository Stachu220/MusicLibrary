<Window x:Class="MusicLibrary.AddSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicLibrary"
        mc:Ignorable="d"
        Title="AddSong" Height="450" Width="800">
    <Grid>
        <!-- Add Song View -->
        <Grid x:Name="AddSongView" Visibility="Visible">
            <Border BorderBrush="White" BorderThickness="2" Margin="10" CornerRadius="5">
                <Grid Margin="10">
                    <!-- Back Button -->
                    <Button Content="⟵" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="30"/>

                    <!-- Drop File Section -->
                    <Border BorderBrush="White" BorderThickness="2" CornerRadius="5" Margin="10,50,400,10">
                        <TextBlock Text="Drop File Here" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Input Fields -->
                    <StackPanel Orientation="Vertical" Margin="378,50,10,10">
                        <TextBox Text="Name" Margin="0,0,0,10"/>
                        <TextBox Text="Description" Margin="0,0,0,10"/>
                        <ComboBox Text="Cat. from list" Margin="0,0,0,10"/>
                        <TextBox Text="Tags"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
                        <Button Content="Save" Width="80" Margin="0,0,10,0"/>
                        <Button Content="Reset" Width="80"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
