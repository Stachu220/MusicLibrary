<Page x:Class="MusicLibrary.FolkCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicLibrary"
        Title="FolkCategory" Height="450" Width="800">
    <Page.Resources>
        <Style TargetType="Button" x:Key="SoundtrackButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25" />
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="Transparent" Offset="0" />
                                <GradientStop Color="Gray" Offset="0.5" />
                                <GradientStop Color="DarkGray" Offset="1" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderThickness" Value="2" />
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="categoryButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border CornerRadius="10" BorderThickness="2" BorderBrush="DarkSlateGray">
                                <Border.RenderTransform>
                                    <SkewTransform AngleX="10" />
                                </Border.RenderTransform>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="LightGray" Offset="0.0" />
                                        <GradientStop Color="White" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ContentPresenter.RenderTransform>
                                        <SkewTransform AngleX="-10" />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>
    <Grid x:Name="MainView" Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="664*"/>
        </Grid.ColumnDefinitions>
        <!-- Navigation Arrows -->
        <Button Content="⟵" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
        <Button Content="⟶" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30" Margin="432,0,0,0" RenderTransformOrigin="1,0" Grid.Column="2"/>

        <!-- Category Tabs -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800" Height="40" Grid.ColumnSpan="3">
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>
            <Button Content="  Category Name  ">
                <Button.Style>
                    <StaticResource ResourceKey="categoryButton"/>
                </Button.Style>
            </Button>

        </StackPanel>

        <!-- Circular Category Display -->
        <Canvas x:Name="myCanva" Width="250" Height="250" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="62,0,0,0" Grid.Column="2">
            <!-- Outer Circle -->
            <Ellipse Width="250" Height="250" Stroke="Black" StrokeThickness="2"/>
            <Button Canvas.Left="100" Canvas.Top="100" Width="50" Height="50">
                <Button.Style>
                    <StaticResource ResourceKey="SoundtrackButton"/>
                </Button.Style>
                <Button.Content>
                    <Image Source="/Images/play.png" Height="32" Width="32" HorizontalAlignment="Center"/>

                </Button.Content>
            </Button>
        </Canvas>

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40" Margin="427,384,0,0" Grid.Column="2" Click="goToAdd">
            <Button.Style>
                <StaticResource ResourceKey="SoundtrackButton"/>
            </Button.Style>
            <Button.Content>
                <Image Source="/Images/add.png" />
            </Button.Content>
        </Button>

        <!-- Details Section -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="486,45,0,0" Height="389" Width="177" Grid.Column="2">
            <TextBlock Text="Title" FontWeight="Bold" Margin="0,5,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="Description:" Margin="0,5,0,10" Height="50"/>
            <Line Stroke="Black" X1="0" X2="177" StrokeThickness="1" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Volume:" VerticalAlignment="Center"/>
                <Slider Width="100" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,200">
                <TextBlock Text="Loop:" VerticalAlignment="Center"/>
                <ToggleButton Content="" Margin="15,0,0,0" Width="100"/>
            </StackPanel>
            <Button Content="Remove" Width="100"/>
        </StackPanel>
    </Grid>
</Page>